# Copy to .env and fill in values. Used locally and as reference for production env vars.

# Application
NODE_ENV=development
APP_PORT=3000
API_PORT=3001
ML_SERVICE_PORT=8000

# MongoDB (use MongoDB Atlas connection string in production)
MONGODB_URI=mongodb://localhost:27017/enterprise-sales-ai
MONGODB_DB_NAME=enterprise-sales-ai

# JWT (use a long random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Stripe Payment Gateway (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend / API URLs (production: set to your Vercel and Render/Railway URLs)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ML_SERVICE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
# Comma-separated for API and ML service in production, e.g. https://yourapp.vercel.app
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ML Service (optional; leave empty on free tier if not using Ollama)
ML_SERVICE_URL=http://localhost:8000
ML_MODEL_PATH=./saved_models
ML_TRAINING_DATA_PATH=./data/processed
AI_MODEL_URL=http://localhost:11434
AI_MODEL_NAME=llama2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
